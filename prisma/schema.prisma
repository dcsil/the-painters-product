// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for managing users who upload data
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  uploads   Upload[]
}

// Upload model for tracking conversation data uploads
model Upload {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  fileName    String
  fileSize    Int        // File size in bytes
  uploadedAt  DateTime   @default(now())
  status      String     // "pending", "processing", "completed", "failed"
  errorMessage String?   // Error message if status is "failed"
  analyses    Analysis[]
}

// Analysis model for storing analysis results
model Analysis {
  id              String   @id @default(cuid())
  uploadId        String
  upload          Upload   @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  analysisType    String   // "hallucination", "gender_bias", "toxicity", etc.
  result          String   // JSON string with detailed results
  confidence      Float?   // Confidence score (0-1)
  detectedIssues  Int      @default(0) // Number of issues detected
  createdAt       DateTime @default(now())
  
  @@index([uploadId])
  @@index([analysisType])
}
